pipeline{
	agent any
	stages{
		stage('scm checkout')
			{
					steps
					{
						git branch: 'master', url: 'https://github.com/Manisha-jharbade/maven-project'
					}
			}
		stage('Parallel stage'){
			parallel {
				stage('Test')
				{
					steps
					{
						withMaven(jdk: 'localJDK-1.8', maven: 'localmaven') 
						{
							sh 'mvn test'
						}
					}
				}
				stage('Packeging')
				{
						steps
					{
						withMaven(jdk: 'localJDK-1.8', maven: 'localmaven') 
						{
							sh 'mvn package'
						}
					}
				}
				failFast:true
			}
		}
	}
}	
